<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListaPeliculasFragment">
    <include
        layout="@layout/tool_bar"/>
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="20dp"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_weight="8">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Bienvenidos al foro de"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avengers: Endgame!"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="Aquí podrás compartir tus ideas \n y comentarios acerca del film."
                    android:gravity="center"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/spinner"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="vertical"></LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/aniadirComentario"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        app:backgroundTint="@color/violet"
        android:textStyle="bold"
        android:text="Añadir Comentario"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_baseline_person_24"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/volverCartelera"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        app:backgroundTint="@color/violet"
        android:textStyle="bold"
        android:text="Volver a la cartelera"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_baseline_account_circle_24"/>
</LinearLayout>