<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="13"
    android:orientation="vertical"
    tools:context=".ListaPeliculasFragment">
    <include
        layout="@layout/tool_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:weightSum="10"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_weight="2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="6"
            android:weightSum="4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="bottom|center"
                    android:text="¡Bienvenidos al foro de"
                    android:textSize="20dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPelicula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="?attr/colorOnSecondary"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:lines="2"
                    android:text="Aquí podrás compartir tus ideas \n y comentarios acerca del film."
                    android:textColor="?attr/colorOnSecondary" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/spinner"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutLista"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewForum"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_gravity="center">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/aniadirComentario"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:backgroundTint="?attr/colorPrimary"
            android:textStyle="bold"
            android:text="Añadir Comentario"
            android:textColor="?attr/colorOnSecondary"
            android:textAllCaps="false"
            app:cornerRadius="15dp"
            app:icon="@drawable/ic_baseline_person_24"
            app:iconTint="?attr/colorOnSecondary"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/volverCartelera"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxHeight="300dp"
            android:layout_gravity="center"
            app:backgroundTint="?attr/colorPrimary"
            android:textStyle="bold"
            android:text="Volver a la cartelera"
            android:textColor="?attr/colorOnSecondary"
            android:textAllCaps="false"
            app:cornerRadius="15dp"
            app:icon="@drawable/ic_baseline_account_circle_24"
            app:iconTint="?attr/colorOnSecondary"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutSecundario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="10"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/fondo_redondeado">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_redondeado_violeta"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Realizar una publicacion"
                    android:textAlignment="center"
                    android:textColor="?attr/colorOnSecondary"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:paddingLeft="10dp"
                    android:paddingVertical="5dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Foro:"
                    android:textColor="?attr/colorOnSecondary"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingLeft="20dp"
                    android:paddingVertical="5dp">
                </TextView>
                <TextView
                    android:id="@+id/categoriaForoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingLeft="4dp"
                    android:paddingVertical="5dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/comentarioTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="300dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Ingrese su comentario"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="?attr/colorOnPrimary"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusBottomEnd="45dp"
                    app:boxCornerRadiusTopEnd="45dp"
                    app:boxCornerRadiusBottomStart="45dp"
                    app:boxCornerRadiusTopStart="45dp"
                    android:gravity="top"
                    android:maxLines="20"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/comentarioEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:maxLines="20"
                        android:maxLength="600"
                        android:textColor="?attr/colorOnSecondary" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelarPublicarButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:backgroundTint="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    app:cornerRadius="90dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/publicarButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:backgroundTint="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:text="Publicar"
                    android:textAllCaps="false"
                    app:cornerRadius="90dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>