<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/titulo_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido a Kino!"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSecondary"
            />

        <ImageView
            android:id="@+id/login_icon"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:layout_gravity="center|bottom"
            android:padding="20dp"></ImageView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usuario_textImputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/user"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="?attr/colorOnPrimary"
            app:boxStrokeWidth="2dp"
            app:boxCornerRadiusBottomEnd="45dp"
            app:boxCornerRadiusTopEnd="45dp"
            app:boxCornerRadiusBottomStart="45dp"
            app:boxCornerRadiusTopStart="45dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/usuario_textInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSecondary"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/contrasena_textImputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:boxBackgroundColor="?attr/colorOnPrimary"
            android:hint="@string/pass"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="2dp"
            app:boxCornerRadiusBottomEnd="45dp"
            app:boxCornerRadiusTopEnd="45dp"
            app:boxCornerRadiusBottomStart="45dp"
            app:boxCornerRadiusTopStart="45dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contrasena_textInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="?attr/colorOnSecondary"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/recordar_usuario_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:buttonTint="?attr/colorPrimary"
                        android:text="Recordar mi usuario"
                        android:textAlignment="center"
                        android:textColor="@color/grey" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ingresar_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:text="Ingresar"
                    android:textColor="?attr/colorOnPrimary"
                    android:textAllCaps="false"
                    app:cornerRadius="90dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/crear_usuario_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="?attr/colorPrimary"
                    app:backgroundTint="?attr/colorOnPrimary"
                    android:textStyle="bold"
                    android:text="Crear Usuario"
                    android:textAllCaps="false"
                    app:cornerRadius="90dp"
                    app:strokeColor="@color/violet"
                    app:strokeWidth="1dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/olvido_contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/olvido_contraseña"
            android:textColorLink="?attr/colorPrimary"
            android:linksClickable="true"
            android:gravity="center"
            android:padding="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutSecundario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:weightSum="10"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/fondo_redondeado">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_redondeado_violeta"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Creacion de usuario"
                    android:textAlignment="center"
                    android:textColor="?attr/colorOnSecondary"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:paddingLeft="10dp"
                    android:paddingVertical="5dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nombre"
                    android:textColor="?attr/colorOnSecondary"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:paddingVertical="5dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nuevoUsuarioNombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="5dp"
                    android:hint="@string/name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="?attr/colorOnPrimary"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusBottomEnd="45dp"
                    app:boxCornerRadiusTopEnd="45dp"
                    app:boxCornerRadiusBottomStart="45dp"
                    app:boxCornerRadiusTopStart="45dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nuevoUsuarioNombre_editText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="?attr/colorOnSecondary"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Apellido"
                    android:textColor="?attr/colorOnSecondary"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:paddingVertical="5dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nuevoUsuarioApellido"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="5dp"
                    android:hint="@string/surname"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="?attr/colorOnPrimary"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusBottomEnd="45dp"
                    app:boxCornerRadiusTopEnd="45dp"
                    app:boxCornerRadiusBottomStart="45dp"
                    app:boxCornerRadiusTopStart="45dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nuevoUsuarioApellido_editText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="?attr/colorOnSecondary"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Correo electronico"
                    android:textColor="?attr/colorOnSecondary"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:paddingVertical="5dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nuevoUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="5dp"
                    android:hint="@string/user"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="?attr/colorOnPrimary"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusBottomEnd="45dp"
                    app:boxCornerRadiusTopEnd="45dp"
                    app:boxCornerRadiusBottomStart="45dp"
                    app:boxCornerRadiusTopStart="45dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nuevoUsuario_editText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="?attr/colorOnSecondary"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Contraseña"
                    android:textColor="?attr/colorOnSecondary"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:paddingVertical="5dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nuevaContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="5dp"
                    android:hint="@string/pass"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="?attr/colorOnPrimary"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusBottomEnd="45dp"
                    app:boxCornerRadiusTopEnd="45dp"
                    app:boxCornerRadiusBottomStart="45dp"
                    app:boxCornerRadiusTopStart="45dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nuevaContrasena_editText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="?attr/colorOnSecondary"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Confirme nueva contraseña"
                    android:textColor="?attr/colorOnSecondary"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:paddingVertical="5dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirmarNuevaContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="5dp"
                    android:hint="@string/newpass"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="?attr/colorOnPrimary"
                    app:boxStrokeWidth="2dp"
                    app:boxCornerRadiusBottomEnd="45dp"
                    app:boxCornerRadiusTopEnd="45dp"
                    app:boxCornerRadiusBottomStart="45dp"
                    app:boxCornerRadiusTopStart="45dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirmarNuevaContrasena_editText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="?attr/colorOnSecondary"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelarNuevoUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:backgroundTint="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    app:cornerRadius="90dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/confirmarNuevoUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:backgroundTint="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:text="Confirmar"
                    android:textAllCaps="false"
                    app:cornerRadius="90dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
